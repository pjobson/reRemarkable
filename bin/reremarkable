#! /usr/bin/python3
# -*- Mode: Python; coding: utf-8; indent-tabs-mode: nil; tab-width: 4 -*-
import sys
import os

import locale
locale.textdomain('reremarkable')

try:
    if os.path.exists("/usr/lib/python3/"):
        sys.path.append("/usr/lib/python3/dist-packages/")
        sys.path.append("/usr/lib/python3/dist-packages/reremarkable")
    else:
        sys.path.append("/usr/lib/python/dist-packages/")
        sys.path.append("/usr/lib/python/dist-packages/reremarkable")
except:
    pass

try:
    sys.path.append("/usr/lib64/python3/dist-packages/")
except:
    pass

# Add project root directory (enable symlink and trunk execution)
PROJECT_ROOT_DIRECTORY = os.path.abspath(
    os.path.dirname(os.path.dirname(os.path.realpath(sys.argv[0]))))

python_path = []
if os.path.abspath(__file__).startswith('/opt'):
    locale.bindtextdomain('reremarkable', '/opt/extras.ubuntu.com/reremarkable/share/locale')
    syspath = sys.path[:] # copy to avoid infinite loop in pending objects
    for path in syspath:
        opt_path = path.replace('/usr', '/opt/extras.ubuntu.com/reremarkable')
        python_path.insert(0, opt_path)
        sys.path.insert(0, opt_path)
    os.putenv("XDG_DATA_DIRS", "%s:%s" % ("/opt/extras.ubuntu.com/reremarkable/share/", os.getenv("XDG_DATA_DIRS", "/usr/local/share/:/usr/share/")))
if (os.path.exists(os.path.join(PROJECT_ROOT_DIRECTORY, 'reremarkable'))
    and PROJECT_ROOT_DIRECTORY not in sys.path):
    python_path.insert(0, PROJECT_ROOT_DIRECTORY)
    sys.path.insert(0, PROJECT_ROOT_DIRECTORY)
if python_path:
    os.putenv('PYTHONPATH', "%s:%s" % (os.getenv('PYTHONPATH', ''), ':'.join(python_path))) # for subprocesses

import reremarkable
reremarkable.main()
